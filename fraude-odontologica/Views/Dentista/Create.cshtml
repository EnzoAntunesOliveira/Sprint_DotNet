@using fraude_odontologica.ViewModels
@model ConsultaViewModel

@{
    ViewData["Title"] = "Novo Dentista";
}

<h2>Novo Dentista</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CRO"></label>
        <input asp-for="CRO" class="form-control" />
        <span asp-validation-for="CRO" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Especialidade"></label>
        <input asp-for="Especialidade" class="form-control" />
        <span asp-validation-for="Especialidade" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
