@model IEnumerable<fraude_odontologica.Application.DTOs.PacienteResponseDTO>

<h2>Lista de Pacientes</h2>

<table class="table">
    <thead>
    <tr>
        <th>Nome</th>
        <th>CPF</th>
        <th>Data de Nascimento</th>
        <th>Plano de Saúde</th>
        <th>Telefone</th>
        <th>Email</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var paciente in Model)
    {
    <tr>
        <td>@paciente.Nome</td>
        <td>@paciente.CPF</td>
        <td>@paciente.DataNascimento.ToString("dd/MM/yyyy")</td>
        <td>@paciente.PlanoSaude</td>
        <td>@paciente.Telefone</td>
        <td>@paciente.Email</td>
        <td>
            <a href="/pacientes/edit/@paciente.IdPaciente">Editar</a> |
            <form method="post" action="/pacientes/delete/@paciente.IdPaciente" style="display:inline;">
                <button type="submit">Excluir</button>
            </form>
        </td>
    </tr>
    }
    </tbody>
</table>
